.nav{
    width:100%;
    height:70px;
    position: fixed;
    left:0;
    top:0;
    background-color: #fff;
}
.midnav{
    width:1000px;
    height:70px;
    margin:0 auto;
}
.midnav span{
    width:182px;
    height:70px;
    display: block;
    float:left;
}
.midnav ul{
    width:200px;
    height:70px;
    display: block;
    float:right;
}
.midnav ul li{
    margin-top:24px;
    padding-right:12px;
    padding-left:12px;
    height:28px;
    text-align: center;
    line-height: 28px;
    display: inline-block;
    font-size:20px;
    border-right:1px solid #d1d1d1;
}
.midnav ul li:nth-child(2) a{
    color:#19783e;
}
.midnav ul li:nth-child(2){
    border:none;
    padding-right: 0;
}
.textIndent{
    text-indent: 40px;
}
.content{
    width:1000px;
    height:1000px;
    margin:0 auto;
    margin-top:80px;
}
.content p{
    width:1000px;
    font-size:18px;
    line-height:30px;
    margin:0 auto;
    margin-bottom:20px;
}
.content img{
    width:75%;
    display:block;
    margin:0 auto;
    margin-bottom:30px;
}
.fontColor{
    color:green;
}

